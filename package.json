{
  "name": "memory-vault",
  "displayName": "Memory Vault",
  "description": "Clipbox is a Visual Studio Code extension designed to simplify note-taking and code snippet storage. It provides users with an intuitive interface to store, organize, and retrieve code snippets and notes.",
  "publisher": "SUNITMAL",
  "icon": "resources/ExtentionIcon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Visualization",
    "Notebooks"
  ],
  "keywords": [
    "notebook",
    "clip"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/sunit-mal/clipbox.git"
  },
  "homepage": "https://github.com/sunit-mal/clipbox/blob/main/README.md",
  "activationEvents": [
    "onCommand:memory-vault.insert-note",
    "onCommand:memory-vault.insert-code",
    "onCommand:memory-vault.store-code",
    "onCommand:memory-vault.filter",
    "onCommand:memory-vault.copy",
    "onCommand:memory-vault.content"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "memory-vault.insert-note",
        "title": "Insert Note"
      },
      {
        "command": "memory-vault.insert-code",
        "title": "Insert Code"
      },
      {
        "command": "memory-vault.store-code",
        "title": "Store Code Snap"
      },
      {
        "command": "memory-vault.filter",
        "title": "Filter Code Snaps"
      },
      {
        "command": "memory-vault.copy",
        "title": "Copy Data"
      },
      {
        "command": "memory-vault.delete",
        "title": "Remove Data"
      },
      {
        "command": "memory-vault.content",
        "title": "Show Content"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "memory-vault",
          "title": "Memory Vault",
          "icon": "resources/ViewIcon.png"
        }
      ]
    },
    "views": {
      "memory-vault": [
        {
          "id": "notebook",
          "name": "Note Vault"
        },
        {
          "id": "codesnap",
          "name": "Code Vault"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "memory-vault.insert-note",
          "when": "view == notebook",
          "title": "Insert Note"
        },
        {
          "command": "memory-vault.insert-code",
          "when": "view == codesnap",
          "title": "Insert Code"
        },
        {
          "command": "memory-vault.filter",
          "when": "view == codesnap",
          "title": "Filter Code Snaps"
        }
      ],
      "view/item/context": [
        {
          "command": "memory-vault.copy",
          "when": "view == notebook",
          "group": "navigation"
        },
        {
          "command": "memory-vault.delete",
          "when": "view == notebook",
          "group": "navigation"
        },
        {
          "command": "memory-vault.content",
          "when": "view == notebook",
          "group": "navigation"
        },
        {
          "command": "memory-vault.copy",
          "when": "view == codesnap",
          "group": "navigation"
        },
        {
          "command": "memory-vault.delete",
          "when": "view == codesnap",
          "group": "navigation"
        },
        {
          "command": "memory-vault.content",
          "when": "view == codesnap",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "memory-vault.store-code",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "clipbox": "file:",
    "memory-vault": "file:",
    "sqlite3": "^5.1.7"
  }
}